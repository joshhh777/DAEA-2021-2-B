@model lab13.Models.Persona

@{
    ViewData["Title"] = "Buscar";
}

<h2>Buscar persona</h2>

@using (Html.BeginForm())
{
<form    >
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Nombre)
            </div>
            <div class="col-md-5">
                <input type="text" name="apellido" />
            </div>
        </div>
        <input type="submit" value="Enviar" />
</form>

    <br />
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.PersonaID)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.PersonaID)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Nombre)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Apellido)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Apellido)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.FechaNac)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.FechaNac)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Direccion)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Direccion)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Email)
        </div>
    </div>
    @Html.ActionLink("Listar personas", "Listar", "Persona")

}

